{
  "family": "weplate-task",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "executionRoleArn": "arn:aws:iam::${ACCOUNT_ID}:role/ECSTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "client-weplate",
      "image": "${ECR_REGISTRY}/weplate/client-weplate:${VERSION}",
      "essential": false,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 1111,
          "hostPort": 1111,
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "server-api",
      "image": "${ECR_REGISTRY}/weplate/server-api:${VERSION}",
      "essential": false,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 7777,
          "hostPort": 7777,
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "server-auth",
      "image": "${ECR_REGISTRY}/weplate/server-auth:${VERSION}",
      "essential": false,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 5555,
          "hostPort": 5555,
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "${ECR_REGISTRY}/weplate/nginx:${VERSION}",
      "essential": true,
      "memoryReservation": 128,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "dependsOn": [
        { "containerName": "client-weplate", "condition": "START" },
        { "containerName": "server-api", "condition": "START" },
        { "containerName": "server-auth", "condition": "START" }
      ]
    }
  ]
}
