{
  "family": "weplate-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "clinet-weplate",
      "image": "${ECR_REGISTRY}/weplate/client-weplate:${VERSION}",
      "essential": false,
      "portMappings": [
        {
          "containerPort": 1111,
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "server-api",
      "image": "${ECR_REGISTRY}/weplate/server-api:${VERSION}",
      "essential": false,
      "portMappings": [
        {
          "containerPort": 7777,
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "server-auth",
      "image": "${ECR_REGISTRY}/weplate/server-auth:${VERSION}",
      "essential": false,
      "portMappings": [
        {
          "containerPort": 5555,
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "${ECR_REGISTRY}/weplate/nginx:${VERSION}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "dependsOn": [
        { "containerName": "clinet-weplate", "condition": "START" },
        { "containerName": "server-api", "condition": "START" },
        { "containerName": "server-auth", "condition": "START" }
      ]
    }
  ]
}
