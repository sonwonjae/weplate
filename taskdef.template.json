{
  "family": "weplate-task",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "executionRoleArn": "arn:aws:iam::${ACCOUNT_ID}:role/ECSTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "client-weplate",
      "image": "${ECR_REGISTRY}/weplate/client-weplate:${VERSION}",
      "essential": false,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 1111,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:1111/ping || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    },
    {
      "name": "server-api",
      "image": "${ECR_REGISTRY}/weplate/server-api:${VERSION}",
      "essential": false,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 7777,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:7777/ping || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    },
    {
      "name": "server-auth",
      "image": "${ECR_REGISTRY}/weplate/server-auth:${VERSION}",
      "essential": false,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 5555,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:5555/ping || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    },
    {
      "name": "nginx",
      "image": "${ECR_REGISTRY}/weplate/nginx:${VERSION}",
      "essential": true,
      "memoryReservation": 128,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "dependsOn": [
        { "containerName": "client-weplate", "condition": "START" },
        { "containerName": "server-api", "condition": "START" },
        { "containerName": "server-auth", "condition": "START" }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/ping || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    }
  ]
}
