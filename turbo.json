{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalEnv": [
        "WEB_SERVER_PORT",
        "AUTH_SERVER_PORT",
        "API_SERVER_PORT",

        "NEXT_PUBLIC_APP_DOMAIN",
        "NEXT_PUBLIC_AUTH_BASE_URL",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_MODE",

        "KAKAO_ADMIN_APP_KEY",
        "KAKAO_REST_APP_KEY",
        "KAKAO_LOGIN_REDIRECT_URI",
        "KAKAO_CHECK_REDIRECT_URI",

        "GOOGLE_CLIENT_ID",
        "GOOGLE_SECRET",
        "GOOGLE_REDIRECT_URI",

        "NEXT_PUBLIC_AUTH_PROVIDER_COOKIE_NAME",
        "NEXT_PUBLIC_AUTH_ACCESS_TOKEN_COOKIE_NAME",
        "NEXT_PUBLIC_AUTH_REFRESH_TOKEN_COOKIE_NAME",
        "NEXT_PUBLIC_AUTH_CHECK_COOKIE_NAME",

        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_DATABASE_PASSWORD",
        "SUPABASE_PASSWORD",
        "SUPABASE_PROJECT_ID",

        "NEXT_PUBLIC_ASSEMBLE_CREATION_LIMIT",
        "NEXT_PUBLIC_ASSEMBLE_MAX_USER_COUNT",
        "NEXT_PUBLIC_TODAY_MAX_RECOMMEND_FOOD_COUNT"
    ],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "cache": false
        },
        "start": {
            "cache": false,
            "persistent": true
        }
    }
}